{
  "name": "gha-pr-nudger",
  "version": "1.0.1",
  "private": true,
  "description": "This action nudges the PR participants to get the PR merged by commenting a reminder message on PRs that are older than `x` number of days.",
  "main": "dist/index.js",
  "scripts": {
    "build": "./node_modules/typescript/bin/tsc -p ./tsconfig.build.json",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest ./__tests__",
    "test:watch": "jest --watch ./__tests__",
    "test:watch:test": "jest --watch ./__tests__/unit/nudger.spec.ts",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpidanny/gha-pr-nudger.git"
  },
  "keywords": [
    "actions",
    "github-actions",
    "node",
    "nudge",
    "short-lived-branches"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && npm run package && git add ./dist",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  },
  "author": "Abhishek Maharjan",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@octokit/rest": "^18.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.4",
    "@rpidanny/eslint-config-typescript": "^1.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.1.1",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.1",
    "@typescript-eslint/parser": "^4.25.0",
    "@vercel/ncc": "^0.28.5",
    "eslint": "^7.26.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^1.3.1",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-mock-extended": "^1.0.15",
    "js-yaml": "^3.14.0",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.0",
    "semantic-release": "^17.4.3",
    "ts-jest": "^26.5.6",
    "tsc": "^2.0.3",
    "typescript": "^4.1.3"
  }
}
